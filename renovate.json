{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "adguard/adguardhome"
      ],
      "matchBaseBranches": [
        "main"
      ],
      "postUpgradeTasks": {
        "matchUpdateTypes": [
          "major",
          "minor",
          "patch"
        ],
        "commands": [
          "sed \"s|^version: .*$|version: $(npx -q -y -- semver -c -l {{{newVersion}}})|\" -i balena.yml"
        ],
        "fileFilters": [
          "balena.yml"
        ],
        "executionMode": "update"
      }
    }
  ]
}
